@model List<MemberProfileItem>
@using SharpMember.Core.Data.Models.MemberSystem

@{
    ViewData["Title"] = "Edit Profile Items";
}

<h2>Edit Profile Items</h2>

<form asp-action="ProfileItems">
    <table class="table">
        <thead>
            <tr>
                <th>@nameof(MemberProfileItem.ItemName)</th>
                <th>@nameof(MemberProfileItem.ItemValue)</th>
            </tr>
        </thead>
        <tbody>
            @for(int i = 0; i < Model.Count; i++)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => modelItem[i].ItemName)
                    </td>
                    <td>
                        @Html.TextBoxFor(modelItem => modelItem[i].ItemValue)
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Update" class="btn btn-default" />
        </div>
    </div>

</form>