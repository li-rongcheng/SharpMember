@model MemberIndexViewModel

@using SharpMember.Core.Views.ViewModels

<form asp-action="Index">
    <div class="form-horizontal">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <table class="table">
            <thead>
                <tr>
                    <th>@nameof(MemberIndexItemViewModel.Selected)</th>
                    <th>@nameof(MemberIndexItemViewModel.MemberNumber)</th>
                    <th>@nameof(MemberIndexItemViewModel.Name)</th>
                    <th>@nameof(MemberIndexItemViewModel.Renewed)</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @for (int i = 0; i < Model.ItemViewModels.Count; i++)
                {
                    <tr>
                        <td>@Html.CheckBoxFor(m => m.ItemViewModels[i].Selected)</td>
                        <td>@Html.DisplayFor(m => m.ItemViewModels[i].MemberNumber)</td>
                        <td>@Html.DisplayFor(m => m.ItemViewModels[i].Name)</td>
                        <td>@Html.DisplayFor(m => m.ItemViewModels[i].Renewed)</td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@Model.ItemViewModels[i].Id">Edit</a> |
                            <a asp-action="Delete" asp-route-id="@Model.ItemViewModels[i].Id">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

        <hr />
        <div class="form-group">
            <div class="col-md-offset-5 col-md-7">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>