@model OrganizationCreateViewModel
@addTagHelper *,SharpMember
@using SharpMember.Core.Views.ViewModels

@{
    ViewData["Title"] = "View";
}

<form asp-action="Create">
    <div class="form-horizontal">
        <h4>Create New Organization</h4>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        @*@Html.Partial("~/Views/Shared/FormItems/EntireEntity.cshtml", typeof(OrganizationCreateViewModel))*@
        <div style="padding-left: 5px;">
            <label asp-for="Name">Organization Name</label>
            <input asp-for="Name" class="form-control" />
        </div>
        <hr />
        @Html.Partial("_MemberProfileItemTemplateForm")

        <hr />
        <div class="form-group">
            <div class="col-md-offset-5 col-md-7">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
