@model CommunityUpdateVm
@addTagHelper *,SharpMember
@using SharpMember.Core.Views.ViewModels

@{
    ViewData["Title"] = "View";
}

<div class="row">
    <div class="col-md-5">
        <form asp-action="Create">
            <h4>Create New Community</h4>
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div style="padding-left: 5px;">

                <vc:form-groups entity-type=@Model.GetType()
                                instance=@Model
                                hidden-fields="id"
                                readonly-fields=""
                                text-area-fields="Introduction,Announcement" />
            </div>

            <hr />
            @await Html.PartialAsync("_MemberProfileItemTemplateForm")

            <hr />
            <div class="form-group" style="float: right;">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
