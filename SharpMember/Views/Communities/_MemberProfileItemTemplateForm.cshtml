@model CommunityUpdateVM
@using SharpMember.Core.Data.Models.MemberSystem
@using SharpMember.Core.Views.ViewModels

<table id="table_for_list_info" class="table">
    <thead>
        <tr>
            <th>Custom Profile Items</th>
            <th width="30px">Required</th>
        </tr>
    </thead>
    <tbody>
        @for(int i = 0; i < Model.MemberProfileItemTemplates.Count; i++)
        {
            <tr class="table_row_for_list_info">
                
                <td class="td_input">
                    <input asp-for="MemberProfileItemTemplates[i].Id" type="hidden" />
                    <input asp-for="MemberProfileItemTemplates[i].CommunityId" type="hidden" />
                    @Html.TextBoxFor(modelItem => modelItem.MemberProfileItemTemplates[i].ItemName, new { @class = "form-control" })
                </td>
                <td class="td_checkbox">@Html.CheckBoxFor(modelItem => modelItem.MemberProfileItemTemplates[i].IsRequired)</td>
            </tr>
        }
    </tbody>
</table> 